{
  "file_paths": {
    "cve_data": "cvelistV5",
    "output_data": "web/cna_data.json"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(levelname)s - %(message)s"
  },
  "data_processing": {
    "filter_by_date": true,
    "start_date_filter": "2017-01-01"
  },
  "model_evaluation": {
    "split_ratio": 0.85,
    "forecast_horizon_months": 24,
    "forecast_end_year": 2026,
    "forecast_end_month": 12
  },
  "models": {
    "Prophet": {
      "enabled": true,
      "hyperparameters": {
        "yearly_seasonality": true,
        "weekly_seasonality": false,
        "daily_seasonality": false,
        "seasonality_mode": "additive",
        "growth": "linear",
        "changepoint_prior_scale": 0.1,
        "seasonality_prior_scale": 0.2,
        "n_changepoints": 15,
        "mcmc_samples": 0,
        "interval_width": 0.8
      }
    },
    "LightGBM": {
      "enabled": true,
      "hyperparameters": {
        "lags": 18,
        "output_chunk_length": 6,
        "n_estimators": 200,
        "max_depth": 8,
        "learning_rate": 0.05,
        "subsample": 0.8,
        "colsample_bytree": 0.8,
        "reg_alpha": 0.1,
        "reg_lambda": 0.1,
        "min_child_samples": 10,
        "random_state": 42,
        "n_jobs": -1,
        "verbose": -1
      }
    },
    "XGBoost": {
      "enabled": true,
      "hyperparameters": {
        "lags": 15,
        "output_chunk_length": 6,
        "n_estimators": 150,
        "max_depth": 6,
        "learning_rate": 0.08,
        "subsample": 0.85,
        "colsample_bytree": 0.85,
        "reg_alpha": 0.05,
        "reg_lambda": 0.05,
        "min_child_weight": 3,
        "random_state": 42,
        "n_jobs": -1,
        "tree_method": "hist"
      }
    },
    "LinearRegression": {
      "enabled": true,
      "hyperparameters": {
        "lags": 24,
        "lags_past_covariates": null,
        "output_chunk_length": 6,
        "fit_intercept": true,
        "multi_models": false,
        "n_jobs": -1,
        "output_chunk_shift": 1,
        "positive": true
      }
    },
    "ExponentialSmoothing": {
      "enabled": true,
      "hyperparameters": {
        "trend": "add",
        "seasonal": "add",
        "seasonal_periods": 12,
        "damped_trend": false
      }
    }
  },
  "model_priority": [
    "ExponentialSmoothing",
    "Prophet",
    "LightGBM", 
    "XGBoost",
    "LinearRegression"
  ]
}
